{% extends 'dashboard.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block content %}
    <section class="text-center">
        <h3>Tableau de bord</h3>
        <p>Bonjour {{ app.user.firstname|capitalize }}, bienvenue sur votre tableau de bord. </p>
    </section>
    <section class="row row-cols-2 row-cols-lg-2 row-cols-xl-3">
        <div class="col">
            <div class="card radius-10">
                <div class="card-body">
                    <div class="mx-auto widget-icon bg-light-dark text-dark">
                        <i class="fa-light fa-user-check"></i>
                    </div>
                    <div class="text-center mt-3">
                        <h5 class="text-dark mb-1">Compte</h5>
                        <p class="text-muted mb-4">vérifié</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card radius-10">
                <div class="card-body">
                    <div class="mx-auto widget-icon bg-light-dark text-dark">
                        <i class="fa-light fa-dollar-sign"></i>
                    </div>
                    <div class="text-center mt-3">
                        <h5 class="text-dark mb-1">560 $</h5>
                        <p class="text-muted mb-4">échangés</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card radius-10">
                <div class="card-body">
                    <div class="mx-auto widget-icon bg-light-dark text-dark">
                        <i class="fa-light fa-arrow-down-arrow-up"></i>
                    </div>
                    <div class="text-center mt-3">
                        <h5 class="text-dark mb-1">06</h5>
                        <p class="text-muted mb-4">transactions</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
