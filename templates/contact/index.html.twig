{% extends 'base.html.twig' %}

{% set title = 'contact' %}

{% block title %}Contact{% endblock %}

{% block content %}
    <div class="container">
        <section class="text-center">
            <h3>Contactez-nous</h3>
            <p>
                Des questions ? N’hésitez pas à nous laisser vos coordonnées et nous vous recontactons dans les plus brefs délais.
            </p>
        </section>
        <section class="row text-center mb-3">
            <div class="col-12 col-md-4">
                <span class="contact-icons">
                    <i class="fa fa-phone fa-2x"></i>
                </span>
                <p>
                    Appel directe : <br>
                    <a href="tel:+228 96 17 35 45">+228 96 17 35 45</a><span class="d-none d-lg-inline-block mx-1">/</span><br class="d-lg-none"><a href="tel:+228 70 26 19 04">+228 70 26 19 04</a>
                </p>
            </div>
            <div class="col-12 col-md-4">
                <span class="contact-icons">
                    <i class="fa fa-envelope fa-2x"></i>
                </span>
                <p>
                    Email : <br>
                    <a href="mailto:contact@lemesemexchange.com">contact@lemesemexchange.com</a>
                </p>
            </div>
            <div class="col-12 col-md-4">
                <span class="contact-icons">
                    <i class="fa fa-map-marker-alt fa-2x"></i>
                </span>
                <p> Siège : <br> <a href="#">Lomé, Togo</a></p>
            </div>
        </section>
        <section class="row my-5">
            <div class="col-12 col-lg-6">
                <h3 class="mb-4 text-center text-lg-start">Envoyez-nous un message</h3>
                <form action="">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Téléphone</label>
                        <input type="tel" name="phone" class="form-control" id="phone" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea name="message" class="form-control" id="message" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-inverse">envoyer</button>
                </form>
            </div>
            <div class="d-none d-lg-block col-lg-6">
                <img src="{{ asset('assets/images/contact.svg') }}" alt="">
            </div>
        </section>
    </div>
{% endblock %}